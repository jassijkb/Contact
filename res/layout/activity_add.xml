<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#223355"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.contact.AddActivity" >

   
    <Button
        android:id="@+id/reset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addnew"
        android:layout_alignBottom="@+id/addnew"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:text="RESET" />

    <Button
        android:id="@+id/addnew"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="34dp"
        android:layout_toLeftOf="@+id/reset"
        android:text="ADD" />

    <EditText
        android:id="@+id/newemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addnew"
        android:layout_below="@+id/newmob"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="ENTER NEW EMAIL"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/newmob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newemail"
        android:layout_below="@+id/newname"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="ENTER NEW MOB"
        android:inputType="phone" />

    <EditText
        android:id="@+id/newname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newmob"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="ENTER NEW NAME"
        android:inputType="textCapSentences" />

</RelativeLayout>
